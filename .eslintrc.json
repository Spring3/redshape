{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "comma-dangle": "off",
        "object-curly-newline": "warn",
        "jsx-a11y/label-has-for": [ 2, {
            "required": {
                "every": [ "nesting", "id" ]
            },
            "allowChildren": true
        }],
        "react/prefer-stateless-function": "off"
    }
}
