{
  "name": "Redshape",
  "version": "1.1.0",
  "description": "Redmine time tracker",
  "main": "main/index.js",
  "scripts": {
    "start": "npm run prepack && electron --noDevServer ./main/index.js",
    "dev": "webpack-dev-server",
    "pack": "electron-builder --dir dist",
    "prepack": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build": "npm run prepack && electron-builder",
    "release": "npm run prepack && electron-builder -p always",
    "release:ci": "npm run prepack && electron-builder -p onTagOrDraft",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .js,jsx --max-warnings 0",
    "test": "ELECTRON_RUN_AS_NODE=true electron node_modules/.bin/jest --forceExit --detectOpenHandles --maxWorkers=2",
    "release:aur": "npm run prepack && sh support/package-aur/manager.sh pack pkgbuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Spring3/redshape.git"
  },
  "author": {
    "name": "Daniyil Vasylenko <https://github.com/Spring3>",
    "email": "redshape.app@gmail.com"
  },
  "contributors": [
    {
      "name": "rNoz (Group4Layers member)",
      "email": "rnoz.commits@gmail.com",
      "url": "https://www.group4layers.com"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Spring3/redshape/issues"
  },
  "homepage": "./",
  "build": {
    "appId": "app.spring3.redshape",
    "electronUpdaterCompatibility": ">= 2.16",
    "files": [
      "common/**/*",
      "main/**/*",
      "assets/**/*.@(png|icns|ico)",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Spring3",
        "repo": "redshape"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "nsis-web"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "deb": {
      "category": "Development",
      "depends": [
        "libxss-dev",
        "pkg-config"
      ]
    },
    "appImage": {
      "category": "Development"
    },
    "directories": {
      "buildResources": "assets",
      "output": "build/"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "axios-mock-adapter": "^1.17.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.7",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "electron": "^8.0.1",
    "electron-builder": "^22.3.2",
    "electron-react-devtools": "^0.5.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "fast-async": "^6.3.8",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-styled-components": "^7.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "raw-loader": "^4.0.0",
    "react-test-renderer": "^16.12.0",
    "redux-mock-store": "^1.5.4",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "axios": "^0.19.2",
    "clean-stack": "^2.2.0",
    "dotenv": "^8.2.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.0.6",
    "electron-store": "^5.1.0",
    "electron-updater": "^4.2.2",
    "electron-util": "^0.14.0",
    "ensure-error": "^2.0.0",
    "formik": "^2.1.4",
    "lodash": "^4.17.21",
    "mdi-react": "^6.7.0",
    "moment": "^2.24.0",
    "moment-duration-format": "^2.3.2",
    "prop-types": "^15.7.2",
    "rc-slider": "^9.2.1",
    "react": "^16.8.6",
    "react-confirm-alert": "^2.5.0",
    "react-day-picker": "^7.4.0",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "react-responsive-modal": "^3.6.0",
    "react-router-dom": "^4.3.1",
    "react-select": "^2.4.1",
    "react-tabs": "^3.1.0",
    "react-toastify": "^5.5.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "showdown": "^1.9.1",
    "styled-components": "^5.0.1",
    "xss": "^1.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
