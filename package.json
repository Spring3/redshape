{
  "name": "Redshape",
  "version": "1.3.4",
  "description": "Redmine time tracker",
  "main": "main/index.js",
  "scripts": {
    "start": "npm run prepack && electron --noDevServer ./main/index.js",
    "dev": "webpack-dev-server",
    "pack": "electron-builder --dir dist",
    "prepack": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build": "npm run prepack && electron-builder",
    "release": "npm run prepack && electron-builder -p always",
    "release:ci": "npm run prepack && electron-builder -p onTagOrDraft",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --ext .jsx --ext .js common/ main/ render/ test/ __mocks__/",
    "test": "ELECTRON_RUN_AS_NODE=true electron node_modules/.bin/jest --forceExit --detectOpenHandles --maxWorkers=2",
    "release:aur": "npm run prepack && sh support/package-aur/manager.sh pack pkgbuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Spring3/redshape.git"
  },
  "author": {
    "name": "Daniyil Vasylenko <https://github.com/Spring3>",
    "email": "redshape.app@gmail.com"
  },
  "contributors": [
    {
      "name": "rNoz (Group4Layers member)",
      "email": "rnoz.commits@gmail.com",
      "url": "https://www.group4layers.com"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Spring3/redshape/issues"
  },
  "homepage": "./",
  "build": {
    "appId": "app.spring3.redshape",
    "electronUpdaterCompatibility": ">= 2.16",
    "files": [
      "common/**/*",
      "main/**/*",
      "assets/**/*.@(png|icns|ico)",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Spring3",
        "repo": "redshape"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "nsis-web"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "deb": {
      "category": "Development",
      "depends": [
        "libxss-dev",
        "pkg-config"
      ]
    },
    "appImage": {
      "category": "Development"
    },
    "directories": {
      "buildResources": "assets",
      "output": "build/"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "axios-mock-adapter": "^1.16.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "electron": "^7.1.7",
    "electron-builder": "^20.41.0",
    "electron-react-devtools": "^0.5.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "fast-async": "^6.3.8",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.2",
    "jest-styled-components": "^6.3.1",
    "mini-css-extract-plugin": "^0.5.0",
    "raw-loader": "^2.0.0",
    "react-test-renderer": "^16.8.4",
    "react-testing-library": "^6.0.0",
    "redux-mock-store": "^1.5.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.3.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "axios": "^0.19.0",
    "clean-stack": "^2.1.0",
    "desktop-idle": "^1.3.0",
    "dotenv": "^8.0.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.6",
    "electron-store": "^3.2.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.11.0",
    "ensure-error": "^2.0.0",
    "formik": "^1.5.7",
    "lodash": "^4.17.11",
    "mdi-react": "^6.5.0",
    "moment": "^2.24.0",
    "moment-duration-format": "^2.3.2",
    "prop-types": "^15.7.2",
    "rc-slider": "^8.7.1",
    "react": "^16.8.6",
    "react-confirm-alert": "^2.4.1",
    "react-day-picker": "^7.4.0",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "react-responsive-modal": "^3.6.0",
    "react-router-dom": "^4.3.1",
    "react-select": "^2.4.1",
    "react-tabs": "^3.0.0",
    "react-toastify": "^5.1.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "showdown": "^1.9.0",
    "showdown-highlight": "^2.1.3",
    "styled-components": "^4.1.3",
    "xss": "^1.0.6"
  }
}
